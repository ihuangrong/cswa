<main class="grid-container">
    <div class="grid-x grid-padding-x">
        <h3 class="cell">Room Detail</h3>
    </div>
    <div>
        <table>
          <tbody>
              <tr>
                <th>Name</th>
                <td>{{model.name}}</td>
              </tr>
              <tr>
                <th>Address</th>
                <td>{{model.address}}</td>
              </tr>
              <tr>
                <th>Capacity</th>
                <td>{{model.capacity}}</td>
              </tr>
              <tr>
                <th>Features</th>
                <td>{{model.features}}</td>
              </tr>
          </tbody>
        </table>
        <div>
          <LinkTo @route="rooms.display">Return</LinkTo>
        </div>
    </div>
</main>