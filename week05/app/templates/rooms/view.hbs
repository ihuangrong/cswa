<main class="grid-container">
    <div class="grid-x grid-padding-x">
        <h1 class="cell">Room Detail</h1>
    </div>
    <div>
        <table>
          <tbody>
            <tr>
              <th>Name</th>
              <td>{{model.name}}</td>
            </tr>
            <tr>
              <th>Address</th>
              <td>{{model.address}}</td>
            </tr>
            <tr>
              <th>Capacity</th>
              <td>{{model.capacity}}</td>
            </tr>
            <tr>
              <th>Features</th>
              <td>{{model.features}}</td>
            </tr>
          </tbody>
        </table>
        <div class="text-right">
          <LinkTo @route="rooms" class="button">Return</LinkTo>
        </div>
    </div>
</main>